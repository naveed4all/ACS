
@page "/SignUp"
@layout EmptyLayout

  <section class="login">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="login-heading"> 
              <h1>Afsar Cold Storage</h1>
              <h2>Register</h2>
            </div>
               <div class="login-form">
                   <form method="post">
                       
                       <div class="row g-3 align-items-center">
                           <div class="col-md-4">
                               <label for="inputPassword6" class="col-form-label1">Name</label>
                               </div>
                               <div class="col-md-6">
                               <input type="text" id="inputPassword6" class="form-control" aria-describedby="passwordHelpInline" placeholder="Enter Your Name">

                           </div>
                       </div>

                       <div class="row g-3 align-items-center">
                           <div class="col-md-4">
                               <label for="inputPassword6" class="col-form-label1">Contact</label>
                               </div>
                               <div class="col-md-6">
                               <input type="text" id="inputPassword6" class="form-control" aria-describedby="passwordHelpInline" placeholder="Enter Your Number">

                           </div>
                       </div>

                       <div class="row g-3 align-items-center">
                           <div class="col-md-4">
                               <label for="inputPassword6" class="col-form-label1">Email</label>
                               </div>
                               <div class="col-md-6">
                               <input type="text" id="inputPassword6" class="form-control" aria-describedby="passwordHelpInline" placeholder="Enter Your Email">

                           </div>
                       </div>

                       <div class="row g-3 align-items-center">
                           <div class="col-md-4">
                               <label for="inputPassword6" class="col-form-label1">Password</label>
                               </div>
                               <div class="col-md-6">
                               <input type="password" id="inputPassword6" class="form-control" aria-describedby="passwordHelpInline" placeholder="Enter Your Password">

                           </div>
                       </div>

                        <button type="submit" class="btn btn-primary">Register</button>
                   </form>
                    <a class="loginDownTxtSignUp" href="/">Continue To Login</a>
               </div>        
       
            
              
          </div>

        </div>

      </div>

    </section>
   